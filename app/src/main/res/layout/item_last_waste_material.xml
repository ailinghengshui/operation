<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/standard_white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/ll_role_container"
        android:background="@drawable/rect_role_bottom"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="39.5dp">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_last_name"
                android:layout_centerInParent="true"
                android:textSize="14sp"
                android:textColor="@color/standard_grey"
                android:text="咖啡豆"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_alignParentRight="true"
                android:background="@color/light_blue"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_last_normal_count"
                android:layout_centerInParent="true"
                android:textSize="14sp"
                android:textColor="@color/standard_grey"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_alignParentRight="true"
                android:background="@color/light_blue"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_last_extra_count"
                android:layout_centerInParent="true"
                android:textSize="14sp"
                android:textColor="@color/standard_grey"
                android:text="维修师"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_alignParentRight="true"
                android:background="@color/light_blue"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_last_totle_count"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textSize="15sp"
                android:textColor="@color/standard_grey"
                android:text="徐凤年"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_promotion_info"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="促销信息：暂无促销信息"
        android:textSize="14sp"
        android:textColor="@color/standard_grey"
        android:layout_marginTop="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"/>
</LinearLayout>