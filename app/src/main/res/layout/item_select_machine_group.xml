<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <View
        android:id="@+id/item_select_machine_blank"
        android:background="@color/color_little_grey"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:background="@color/standard_white"
        android:id="@+id/ll_menu_item_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:background="@color/standard_white"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="80dp">
    <LinearLayout
        android:id="@+id/ll_check"
        android:gravity="center_vertical"
        android:layout_width="42dp"
        android:layout_height="match_parent">
        <CheckBox
            android:clickable="false"
            android:id="@+id/iv_select_machine_isChecked"
            android:layout_marginLeft="12dp"
            style="@style/MyCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:textSize="24sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/iv_select_machine_icon"
        android:background="@drawable/icon_group"
        android:layout_width="66dp"
        android:layout_height="58dp" />
    <LinearLayout
        android:layout_marginLeft="12dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_select_machine_name"
            android:textColor="@color/heavy_grey"
            android:textSize="17sp"
            android:text="test001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:lines="1"
            android:ellipsize="end"
            android:id="@+id/tv_select_machine_des"
            android:text="fdajflkjflkadsjfl"
            android:textColor="@color/heavy_grey"
            android:textSize="12sp"
            android:layout_marginTop="11.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/iv_select_machine_down"
        android:layout_marginRight="12dp"
        android:src="@drawable/icon_arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
    <View
        android:id="@+id/item_select_machine_line"
        android:background="@color/line_color"
        android:layout_marginLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    </LinearLayout>
    </LinearLayout>