<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/color_little_grey"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_more_person"
        android:background="@color/standard_white"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <TextView
            android:text="@string/principal"
            android:textSize="15sp"
            android:textColor="@color/heavy_grey"
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:text="去添加"
            android:textSize="14sp"
            android:textColor="@color/standard_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/icon_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <com.hzjytech.operation.widgets.LinearLayout.LinearListView
        android:visibility="gone"
        android:id="@+id/ll_person_container"
        android:layout_marginTop="5dp"
        android:background="@color/standard_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>