<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/color_little_grey"
    android:layout_height="80dp">
<LinearLayout
    android:layout_marginLeft="12dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:background="@drawable/rect_daily_order_blue"
        android:layout_width="15dp"
        android:layout_height="15dp" />
    <TextView
        android:textColor="@color/standard_grey"
        android:textSize="12sp"
        android:layout_marginLeft="5dp"
        android:text="蓝色代表每日订单数"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
    android:layout_marginLeft="12dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:background="@drawable/rect_daily_order_red"
        android:layout_width="15dp"
        android:layout_height="15dp" />
    <TextView
        android:textColor="@color/standard_grey"
        android:textSize="12sp"
        android:layout_marginLeft="5dp"
        android:text="红色代表每日销售杯数"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
</LinearLayout>