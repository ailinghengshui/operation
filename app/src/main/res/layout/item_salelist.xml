<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/standard_white"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="80dp">
<TextView
    android:id="@+id/tv_salelist_order_adrress"
    android:textColor="@color/heavy_grey"
    android:text="1.科大家属楼大发发发大水发"
    android:textSize="14sp"
    android:lines="1"
    android:ellipsize="end"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="12.5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="15.5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_salelist_count"
            android:text="销售量：1000杯"
            android:textColor="@color/color_green"
            android:textSize="12sp"
            android:layout_marginLeft="12.5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_salelist_money"
            android:text="销售总额：1000元"
            android:textColor="@color/color_green"
            android:textSize="12sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
   <View
       android:layout_marginLeft="12.5dp"
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="@color/line_color"/>
</LinearLayout>