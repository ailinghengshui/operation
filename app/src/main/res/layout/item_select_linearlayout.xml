<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_check_moreTime"
        android:background="@color/standard_white"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <TextView
            android:text="选择时间"
            android:textSize="15sp"
            android:textColor="@color/heavy_grey"
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_more_choose"
            android:text="更多选项"
            android:textSize="14sp"
            android:textColor="@color/standard_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/icon_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="@color/line_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:background="@color/standard_white"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <TextView
            android:id="@+id/tv_select_startTime"
            android:text="开始时间"
            android:textSize="14sp"
            android:textColor="@drawable/selector_select_time_text"
            android:gravity="center"
            android:background="@drawable/selector_select_time"
            android:layout_marginLeft="37.5dp"
            android:layout_marginRight="37.5dp"
            android:layout_width="match_parent"
            android:layout_height="32dp" />
        <TextView
            android:id="@+id/tv_select_endTime"
            android:text="结束时间"
            android:textSize="14sp"
            android:textColor="@drawable/selector_select_time_text"
            android:gravity="center"
            android:background="@drawable/selector_select_time"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="37.5dp"
            android:layout_marginRight="37.5dp"
            android:layout_width="match_parent"
            android:layout_height="32dp" />
    </LinearLayout>
</LinearLayout>