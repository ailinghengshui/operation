<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/color_little_grey"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@color/standard_white"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <LinearLayout
        android:id="@+id/ll_comment"
        android:orientation="vertical"
        android:layout_marginLeft="22.5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_comment"
            android:textColor="@color/heavy_grey"
            android:textSize="15sp"
            android:text="评论"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:id="@+id/line_comment"
            android:layout_marginTop="4dp"
            android:background="@color/color_red"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="10dp"
        android:background="@color/line_color"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:layout_width="1dp"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/ll_history"
        android:orientation="vertical"
        android:layout_marginLeft="10.5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_history"
            android:textColor="@color/standard_grey"
            android:textSize="15sp"
            android:text="历史动态"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:id="@+id/line_history"
            android:visibility="invisible"
            android:layout_marginTop="4dp"
            android:background="@color/color_red"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"/>
    </LinearLayout>
</LinearLayout>
    <View
        android:background="@color/line_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>