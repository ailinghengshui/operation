<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp">
    <TextView
        android:id="@+id/tvUpdateDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/normal_black"
        android:textSize="17dp" />


    <TextView
        android:id="@+id/tvUpdateDialogDescContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:textSize="15dp"
        >
    </TextView>
     <com.hzjytech.operation.widgets.dialogs.FlikerProgressBar
         android:id="@+id/pb_down"
         android:layout_marginTop="10dp"
         android:layout_marginBottom="10dp"
         android:layout_marginLeft="22dp"
         android:layout_marginRight="22dp"
         android:layout_width="match_parent"
         app:filkertextSize="8sp"
         app:progressRadius="8dp"
         android:layout_height="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/line_color"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/btnUpdateDialogOpleft"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/str_ignore"
            android:gravity="center"
            android:textSize="17dp"
            android:textColor="@color/normal_blue"
            />
        <TextView
            android:layout_width="@dimen/line_height"
            android:layout_height="match_parent"
            android:background="@color/line_color"
            />
        <TextView
            android:id="@+id/btnUpdateDialogOpright"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/str_update"
            android:gravity="center"
            android:textSize="17dp"
            android:textColor="@color/normal_blue"
            />
    </LinearLayout>

</LinearLayout>