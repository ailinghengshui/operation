<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/standard_white"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
<TextView
    android:paddingLeft="13dp"
    android:gravity="center_vertical"
    android:textSize="17sp"
    android:textColor="@color/heavy_grey"
    android:text="咖啡机信息"
    android:layout_width="match_parent"
    android:layout_height="50dp" />
    <View
        android:background="@color/line_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_machine_code"
            android:gravity="center_vertical"
            android:textColor="@color/standard_grey"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="咖啡机编号：test0001"
            android:paddingLeft="13dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_machine_group"
            android:gravity="center_vertical"
            android:textColor="@color/standard_grey"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="促销分组：3.16"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:background="@color/line_color"
        android:layout_marginLeft="13dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_machine_menu"
            android:gravity="center_vertical"
            android:textColor="@color/standard_grey"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="菜单：锦业"
            android:paddingLeft="13dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_machine_version"
            android:gravity="center_vertical"
            android:textColor="@color/standard_grey"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="14sp"
            android:text="当前版本：4.4.2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:background="@color/line_color"
        android:layout_marginLeft="13dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:textColor="@color/standard_grey"
            android:textSize="14sp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="16dp"
            android:text="地址："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_machine_location"
            android:text="江干区白杨街道杭州市高科技孵化园区杭州锦业科技有限公司"
            android:lines="2"
            android:layout_marginTop="16dp"
            android:textColor="@color/standard_grey"
            android:textSize="14sp"
            android:layout_width="243dp"
            android:layout_height="wrap_content" />
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <View
            android:layout_marginRight="22dp"
            android:background="@color/line_color"
            android:layout_marginTop="14.5dp"
            android:layout_marginBottom="14.5dp"
            android:layout_width="1dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/iv_guide"
            android:layout_marginRight="24dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/icon_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp" />
    </LinearLayout>
</LinearLayout>